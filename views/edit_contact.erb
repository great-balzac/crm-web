<h1 class="textshadow">Edit a Contact</h1>
	<div class="col-1-3 cf">
		<table class="new-contact-table">
		<form action="/contacts/<%= @contact.id %>" method="post" class="cf">
		<input type="hidden" name="_method" value="put">
		<tr>
			<th>First name</th>
			<th><input type="text" name="fname" value="<%= @contact.fname %>"></th>
		</tr>
		<tr>
			<th>Last name</th>
			<th><input type="text" name="lname" value="<%= @contact.lname %>"></th>
		</tr>
		<tr>
			<th>Email</th>
			<th><input type="text" name="email" value="<%= @contact.email %>"></th>
		</tr>
		<tr>
			<th>Notes</th>
			<th><input type="text" name="notes" value="<%= @contact.notes %>"></th>
		</tr>
		<tr>
			<th></th>
			<th><input type="submit" name="Submit"></th>
		</tr>
		</form>
		</table>
	</div>